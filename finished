<script>
const API_URL = "https://script.google.com/macros/s/AKfycbwumwjQ2R7sa80IkXm17-CNaPtYefU4Lwlx1VKtMusly_H35tEAinsWLQkEIadARnOA/exec";
let lotteryId = "";

// ===== ãƒ–ãƒ©ã‚¦ã‚¶UUIDï¼ˆclientIdï¼‰ =====
function getClientId() {
  let id = localStorage.getItem("clientId");
  if (!id) {
    id = crypto.randomUUID();
    localStorage.setItem("clientId", id);
  }
  return id;
}

const clientId = getClientId();

async function draw() {
  const name = document.getElementById("name").value;
  if(!name){ alert("ãŠåå‰ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„"); return; }

  document.getElementById("noticeText").style.display = "none";
  document.getElementById("drawButton").style.display = "none";
  document.getElementById("name").style.display = "none";

  const box = document.getElementById("box");
  const resultText = document.getElementById("resultText");
  resultText.style.display = "none";

  box.classList.add("shake");

  const fetchPromise = fetch(API_URL, {
    method: "POST",
    body: JSON.stringify({
    mode: "draw",
    name,
    clientId
    })
  }).then(res => res.json());
  
  await new Promise(resolve=>{
    box.addEventListener("animationend", function handler(){
      box.classList.remove("shake");
      box.removeEventListener("animationend", handler);
      resolve();
    });
  });

  const data = await fetchPromise;

  if (data.status === "already") {
    alert("å‚åŠ æ¸ˆã¿ã§ã™ã€‚\nãŠã²ã¨ã‚Šæ§˜1å›ã¾ã§ã¨ãªã‚Šã¾ã™ã€‚");
    return;
  }
  
  if(data.status==="empty"){
    setTimeout(()=>{ 
      resultText.innerHTML = '<span class="result-text">ãã˜ãŒã‚ã‚Šã¾ã›ã‚“</span>'; 
      resultText.style.display="block";
    },400); 
    return;
  }

  lotteryId = data.lotteryId;
  let message = '<span class="result-text">ï¼¼ '+data.result+' ï¼</span><br>'+
                '<span class="prize-text">'+data.prize+'</span>';

  if(data.result==="ã¯ãšã‚Œ"){
    message += "<span style='font-size:24px; display:block; margin-top:4px;'>æœ¬å¹´ã‚‚ã©ã†ãã‚ˆã‚ã—ããŠé¡˜ã„ã—ã¾ã™</span>";
  }
  if(data.result==="ã‚ãŸã‚Š"){
    message += '<div class="info-text">ãƒãƒƒãƒ—ã‚¢ãƒƒãƒ—ãŒè¡¨ç¤ºã•ã‚Œãªã„å ´åˆã¯<a href="mailto:cbeb_info@cb-eb.co.jp?subject=ãŠå¹´ç‰ãã˜%20å½“é¸é€£çµ¡&body=å¾Œæ—¥æ‹…å½“è€…ã‚ˆã‚Šã”é€£çµ¡ã„ãŸã—ã¾ã™ã€‚ä¼šç¤¾åãƒ»ãŠåå‰ã‚’å…¥åŠ›ã®ã†ãˆã€é€ä¿¡ã—ã¦ãã ã•ã„ã€‚" class="mail-link">info</a>ã¸ã”é€£çµ¡ãã ã•ã„</div>';
  }

  resultText.innerHTML = message;
  resultText.style.display = "block";

  if(data.result==="ã‚ãŸã‚Š"){
    setTimeout(()=>{ document.getElementById("popupOverlay").style.display="flex"; },2300);
  }
}
