<script>
async function sendEmail(){
  const email = document.getElementById("email").value;
  const btn = document.querySelector("#popupForm button");
  if(!email){ alert("ãƒ¡ãƒ¼ãƒ«ã‚¢ãƒ‰ãƒ¬ã‚¹ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„"); return; }

  btn.disabled=true; btn.innerText="ç™»éŒ²ä¸­..."; btn.classList.add("disabled");

  await fetch(API_URL, { method:"POST", body:JSON.stringify({mode:"saveEmail", lotteryId, email}) });

  document.getElementById("popupForm").style.display="none";
  document.getElementById("popupComplete").style.display="block";

  setTimeout(()=>{
    document.getElementById("popupOverlay").style.display="none";
    btn.disabled=false; btn.innerText="ç™»éŒ²"; btn.classList.remove("disabled");
    document.getElementById("popupForm").style.display="block";
    document.getElementById("popupComplete").style.display="none";
  },2500);
}
</script>

